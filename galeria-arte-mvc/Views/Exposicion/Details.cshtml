@model galeria_arte_mvc.Models.Exposicion

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Exposicion</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
    </dl>
</div>
@if (Model.ObrasExpuestas == null)
{
    <p>No hay obras publicadas</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Título</th>
                <th>Imagen</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obra in Model.ObrasExpuestas)
            {
                <tr>
                    <td>@obra.Titulo</td>
                    <td><img src="@obra.UrlImagen" height="50" /></td>
                    <td>
                        <form asp-action="QuitarObrasSeleccionadas" method="post">
                            <input type="hidden" name="obraId" value="@obra.Id" />
                            <input type="hidden" name="expoId" value="@Model.Id" />
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <a asp-action="SeleccionObras" asp-route-id="@Model.Id">Agregar Obras</a>
</div>
