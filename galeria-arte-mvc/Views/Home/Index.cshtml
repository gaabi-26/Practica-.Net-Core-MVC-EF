@{
    ViewData["Title"] = "Home Page";
}
<h1>Galería de Arte Virtual</h1>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card" style="height: 400px">
                <img src="@item.UrlImagen" class="card-img-top img-fluid h-50 object-fit-cover" alt="...">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Titulo</h5>
                    <p class="card-text">@item.Estilo</p>
                    <p class="card-text">Arista: @item.Artista.Nombre</p>
                    <a asp-controller="Obra" asp-action="Details" asp-route-id="@item.Id" class=" mt-auto">Detalles</a>
                </div>
            </div>
        </div>
    }
</div>
